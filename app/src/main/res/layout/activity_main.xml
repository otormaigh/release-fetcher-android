<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnShowReleases"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Show Releases"
    app:layout_constraintBottom_toTopOf="@id/btnFetchRelease"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed" />

  <com.google.android.material.button.MaterialButton
    android:id="@+id/btnFetchRelease"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Fetch Releases"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/btnShowReleases" />

</androidx.constraintlayout.widget.ConstraintLayout>